<Window
    x:Class="Easyyyyy_Reborn.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:vm="clr-namespace:Easyyyyy_Reborn.ViewModels"
    Title="Easyyyyy"
    Width="305"
    Height="230"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="/Easyyyyy Reborn;component/Resources/Fonts/#MontSerrat"
    Icon="/Resources/Icons/logo.png"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding OnClosedApplication}" />
        </i:EventTrigger>

        <i:EventTrigger EventName="MouseDown">
            <i:InvokeCommandAction Command="{Binding SetupBindKey}" PassEventArgsToCommand="True" />
        </i:EventTrigger>

        <i:EventTrigger EventName="KeyDown">
            <i:InvokeCommandAction Command="{Binding SetupBindKey}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Canvas>

        <Border
            x:Name="Header"
            Width="305"
            Height="30"
            Background="#040404">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding DragMainWindow}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <Canvas>

                <TextBlock
                    Canvas.Left="10"
                    Canvas.Top="2"
                    Padding="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="Gray">
                    <Run FontSize="13" Text="Easyyyyy" />
                    <Run
                        FontSize="13"
                        Foreground="#0077ff"
                        Text="Reborn" />
                    <Run
                        FontSize="13"
                        Foreground="White"
                        Text="-" />
                    <Run
                        FontSize="13"
                        Foreground="#0077ff"
                        Text="{Binding CurrentClicks, UpdateSourceTrigger=PropertyChanged}" />
                    <Run FontSize="13" Text="cps" />
                </TextBlock>

                <Border
                    x:Name="WindowControls"
                    Canvas.Left="275"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">

                    <Canvas>

                        <Image
                            x:Name="CloseIconActive"
                            Canvas.Left="4"
                            Canvas.Top="7"
                            Width="16"
                            Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Cursor="Hand"
                            Opacity="0.0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/Resources/Icons/close_icon_active.png" />

                        <Image
                            x:Name="CloseIcon"
                            Canvas.Left="4"
                            Canvas.Top="7"
                            Width="16"
                            Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/Resources/Icons/close_icon.png">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding CloseMainWindow}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                            <Image.Triggers>
                                <EventTrigger RoutedEvent="Image.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                FillBehavior="HoldEnd"
                                                Storyboard.TargetName="CloseIconActive"
                                                Storyboard.TargetProperty="(Image.Opacity)"
                                                From="0.0"
                                                To="1.0"
                                                Duration="0:0:0:0.2" />

                                            <DoubleAnimation
                                                FillBehavior="HoldEnd"
                                                Storyboard.TargetProperty="(Image.Opacity)"
                                                From="1.0"
                                                To="0.0"
                                                Duration="0:0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="Image.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                FillBehavior="HoldEnd"
                                                Storyboard.TargetName="CloseIconActive"
                                                Storyboard.TargetProperty="(Image.Opacity)"
                                                From="1.0"
                                                To="0.0"
                                                Duration="0:0:0:0.2" />

                                            <DoubleAnimation
                                                FillBehavior="HoldEnd"
                                                Storyboard.TargetProperty="(Image.Opacity)"
                                                From="0.0"
                                                To="1.0"
                                                Duration="0:0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Image.Triggers>

                        </Image>

                    </Canvas>

                </Border>

            </Canvas>

        </Border>

